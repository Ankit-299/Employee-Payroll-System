<!DOCTYPE html>
<html>

<head>
    <title>Employee Payroll Form</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>

    <div class="topbar">
        <div class="logo">
            <span class="logo-green">EMPLOYEE</span>
            <span class="logo-dark">PAYROLL</span>
        </div>
    </div>

    <div class="form-wrapper">
        <div class="form-card">

            <h2>Employee Payroll Form</h2>

            <form action="/post" method="POST">

                <!-- NAME -->
                <div class="form-row">
                    <label>Name</label>
                    <input type="text" name="username" required>
                </div>

                <!-- PROFILE IMAGE -->
                <div class="form-row">
                    <label>Profile image</label>
                    <div class="profile-group">

                        <label class="profile-option">
                            <input type="radio" name="profile">
                            <img src="/assets/profile.png">
                        </label>

                        <label class="profile-option">
                            <input type="radio" name="profile">
                            <img src="/assets/profile.png">
                        </label>

                        <label class="profile-option">
                            <input type="radio" name="profile">
                            <img src="/assets/profile.png">
                        </label>

                        <label class="profile-option">
                            <input type="radio" name="profile">
                            <img src="/assets/profile.png">
                        </label>

                    </div>
                </div>

                <!-- GENDER -->
                <div class="form-row">
                    <label>Gender</label>
                    <div class="gender-group">

                        <label>
                            <input type="radio" name="gender" value="Male">
                            Male
                        </label>

                        <label>
                            <input type="radio" name="gender" value="Female">
                            Female
                        </label>

                    </div>
                </div>

                <!-- DEPARTMENT -->
                <div class="form-row">
                    <label>Department</label>
                    <div class="dept-group">

                        <label>
                            <input type="checkbox" name="department[]" value="HR">
                            HR
                        </label>

                        <label>
                            <input type="checkbox" name="department[]" value="Sales">
                            Sales
                        </label>

                        <label>
                            <input type="checkbox" name="department[]" value="Finance">
                            Finance
                        </label>

                        <label>
                            <input type="checkbox" name="department[]" value="Engineer">
                            Engineer
                        </label>

                        <label>
                            <input type="checkbox" name="department[]" value="Others">
                            Others
                        </label>

                    </div>
                </div>

                <!-- SALARY -->
                <div class="form-row">
                    <label>Salary</label>
                    <select name="basicSalary">
                        <option>Select Salary</option>
                        <option>10000</option>
                        <option>20000</option>
                        <option>30000</option>
                        <option>40000</option>
                    </select>
                </div>

                <!-- START DATE -->
                <div class="form-row">
                    <label>Start Date</label>
                    <div class="date-group">

                        <input placeholder="Enter Date">

                        <select name="month">
                            <option>Month</option>
                            <option>Jan</option>
                            <option>Feb</option>
                            <option>Mar</option>
                            <option>April</option>
                            <option>May</option>
                            <option>June</option>
                            <option>July</option>
                            <option>Aug</option>
                            <option>Sept</option>
                            <option>Oct</option>
                            <option>Nov</option>
                            <option>Dec</option>
                        </select>

                        <select name="year">
                            <option>Year</option>
                            <option>2024</option>
                            <option>2025</option>
                            <option>2026</option>
                        </select>

                    </div>
                </div>

                <!-- NOTES -->
                <div class="form-row">
                    <label>Notes</label>
                    <textarea></textarea>
                </div>

                <!-- BUTTONS -->
                <div class="form-buttons">
                    <button type="button" class="cancel" onclick="window.location.href='/'">Cancel</button>



                    <button type="submit" class="submit">
                        Submit
                    </button>

                    <button type="reset" class="cancel">
                        Reset
                    </button>
                </div>

            </form>
        </div>
    </div>

</body>

</html>
